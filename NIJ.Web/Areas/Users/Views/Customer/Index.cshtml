@model IEnumerable<Modelo.Cadastros.Customer>

@{
    Layout = "~/Areas/Users/Views/Views/Shared/_LayoutIES.cshtml";
//    D:\Dev\Pocs\NIJ\NIJ.WebCustomer\Index.cshtml
}
@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link
            rel="stylesheet" 
            href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" 
            asp-asp-fallback-href="~/lib/datables/css/jquery.dataTables.min.css"
            asp-fallback-test-class="sr-only"
            asp-fallback-test-property="position"
            asp-fallback-test-value="absolute"
        />
    </environment>
}

@if(@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]        
    </div>
}

<div class="card-block">
    <div class="card-heard text-white bg-primary text-center h1">Atividades Registradas</div>
    <div card-body>
        <table id="customers">
            <thead>
                <tr>
                   <th>
                    @Html.DisplayNameFor(model => model.CustomerId)
                    </th>
                    <th>
                    @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cnpj)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerId)
                        a
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                        a
                    </td>
                    <td>
                        a
                        @Html.DisplayFor(modelItem => item.Cnpj)
                    </td>

                    <td>
                       a @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.CustomerId }) |
                        @Html.ActionLink("Details", "Details", new { id=item.CustomerId }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.CustomerId })
                    </td>
                </tr>
            }
            </tbody>            
        </table>        
    </div>
    <div class="card-footer bg-success text-center">
        <a asp-action="Create" class="btn-success">Novo Cliente</a>
    </div>    
</div>

@section ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="//cdn.datatables.net/1.10.20/js//jquery.dataTables.min.js" asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <script type="text/javascript">
        $(document).ready(function (){
            $('#customers').DataTable({
                "order": [[1, "asc"]]
            });
        });        
    </script>
}