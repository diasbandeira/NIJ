<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css"/>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css"/>
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" 
            href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" 
            asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css" 
            asp-fallback-test-class="sr.only" 
            asp-fallback-test-property="position" 
            asp-fallback-test-value="absolute"
        />
        <link rel="stylesheet" 
            href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap-grid-min.css" 
            asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" 
            asp-fallback-test-class="sr-only" 
            asp-fallback-test-property="position" 
            asp-fallback-test-value="absolute" 
        />

    </environment>

    @RenderSection("Styles", required: false)

</head>
<body>
    <nav class="navbar navbar-light bg-primary navbar-fixed-top">
        <div class="container-fluid">
            <div class="row">
                <div class="navbar-header">
                    @*<img class="media-heading" src="/images/logo.jpg" width="30" height="30" alt="" >*@
                </div>
                <div>
                    <ul class="nav navbar-nav navbar-light">
                        <li class="navbar-brand">NIJ Web</li>
                    </ul>
                </div>
            </div>            
        </div>
    </nav>
    <div class="container" style="margin-top: 20px;">
        <div class="row">
            <div class="col-3">
                <nav class="nav flex-column bg-transparent" style="margin-left:40px;">
                    <div class="row">
                        <a class="nav-link active" asp-area="Entry" asp-controller="Activity" asp-action="Index" >
                            <img src="~/images/Activities.png" width="30" height="30" alt="" />
                            Atividades.
                        </a>                        
                    </div>
                    <div class="row">
                        <a class="nav-link" asp-controller="Project" asp-action="Index">
                            <img src="~/images/Projects.png" width="30" height="30" alt="" />
                            Projetos
                        </a>                        
                    </div>
                </nav>
            </div>
             <div class="col-9">
                @RenderBody()
            </div>            
        </div>        
    </div>
    <nav class="navbar fixed-bottom" style="background-color: #e3f2fd; margin-top:20px;">
        <a class="navbar-brand" href="#" >NIJ- NOT IS JIRA!!!</a>        
    </nav>
    <environment include="Developement">
        <script src="~/lib/jquery/jquery.slim.min.js"></script>
        <script src="~/lib/popper.js/umd/popper.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    </environment>
    <environment exclude="Delopment">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper/1.14.4/umd/popper.min.js" asp-fallback-src="~/lib/popper.js/umd/popper.js" ></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" asp-fallback-src="~/lib/jquery/jquery.slim.min.js" ></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js" asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.js" ></script>
    </environment>
    @RenderSection("ScriptPage", required: false)
</body>
</html>