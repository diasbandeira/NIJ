@model Modelo.Cadastros.Project

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}


<div class="card-block">
    <div class="card-header text-white bg-danger text-center h1">Alterando um projeto existente</div>
        <div class="card-body">
            <form enctype="multipart/form-data" asp-action="Edit">
                @Html.HiddenFor(x => x.ProjectId)    
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>                    
                </div>
                <div class="form-group">
                    <label asp-for="Foto" class="control-label"></label>
                    <input type="file" name="foto" class="form-control" />                    
                </div>
                <div class="form-group text-center h3">
                    <input type="submit" value="Salvar" class="btn btn-primary" />                     
                    <a asp-action="Index" class="btn btn-info">Retornar a lista de projetos</a>
                </div>            
            </form>
        </div>
        <div class="footer bg-dark text-center text-white">Informe os dados acima e ou clique no botão de uma das ações </div>
</div>
@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

