@model NIJ.Web.Models.Activity

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Activity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
