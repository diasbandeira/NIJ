@model NIJ.Web.Models.Activity

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutIES.cshtml";
}

<div class="card-block">
    <div class="card-header text-white bg-danger text-center h1">Cadastro de nova atividade</div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               @* <div class="form-group">
                    <label asp-for="ActivityId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ActivityId" class="form-control" />
                        <span asp-validation-for="ActivityId" class="text-danger"></span>
                    </div>
                </div>*@
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                    
                </div>
                <div class="form-group">
                    <label asp-for="ProjectId" class="control-label"></label>
                    <select asp-for="ProjectId" asp-items="@(new SelectList(@ViewBag.Projects, "ProjectId", "Name"))" class="form-control" > </select>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    
                </div>
                <div class="form-group">
                    <label asp-for="StartedAt" class="control-label"></label>
                    <input asp-for="StartedAt" class="form-control" />
                    <span asp-validation-for="StartedAt" class="text-danger"></span>
                    
                </div>
                <div class="form-group">
                    <label asp-for="EndedAt" class="control-label"></label>
                    <input asp-for="EndedAt" class="form-control" />
                    <span asp-validation-for="EndedAt" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>            
                  @*  <input asp-for="Status" class="form-control" />*@
                    <select asp-for="Status" default="Selecione o Status" class="form-control" >
                        <option value="Started">Iniciado</option>
                        <option value="Pause">Pausado</option>
                        <option value="Ended">Concluido</option>
                        <option value="Deleted">Excluido</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>                    
                </div>
                <div class="form-group text-center h3">
                    <input type="submit" value="Create" class="btn btn-primary" />                     
                    <a asp-action="Index" class="btn btn-info">Retornar a lista de atividades</a>
                </div>            
            </form>
        </div>
        <div class="footer bg-dark text-center text-white">Informe os dados acima e ou clique no botão de uma das ações </div>
</div>
@section ScriptPage {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
